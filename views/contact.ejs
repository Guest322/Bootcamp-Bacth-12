    <h1>Ini Adalah Page Contact</h1>
    <div>
    <a href="/dataAdd"><button>create data</button></a>
    <table>
        <thead>
            <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Actions</th>
            </tr>
        </thead>
        <% cont.forEach(contact => { %>
        <tbody>
            <tr>
            <td><%= contact.name %></td>
            <td><%= contact.phone %></td>
            <td>
                <form action="/delete/<%= contact.name %>" method="post" style="display:inline;">
                <button type="submit">Delete</button>
                </form>
                <a href="/dataUpdate/<%= contact.name %>"><button>Update</button></a>
            </td>
            </tr>
        </tbody>
        <% }) %>
      </table>      
    </div>
