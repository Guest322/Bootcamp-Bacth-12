<div class="form-container">
    <h2>Update Contact</h2>
    <form action="/updateData/<%= contact.name %>" method="post">
        <% if (errors && errors.length > 0) { %>
            <ul class="error-list">
                <% errors.forEach(error => { %>
                    <li style="color: red;"><%= error.msg %></li>
                <% }); %>
            </ul>
        <% } %>
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="<%= contact.name %>" required>
        </div>
        <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="tel" id="phone" name="phone" value="<%= contact.phone %>" required>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="mail" name="mail" value="<%= contact.mail %>" required>
        </div>
        <div class="form-group">
            <button type="submit">Update</button>
        </div>
    </form>
</div>
